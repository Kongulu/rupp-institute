---
import Base from "@/layouts/Base.astro";
---
<Base title="Register">
  <section class="ri-hero-bg">
    <div class="py-24">
      <form class="ri-panel">
        <h1 class="text-2xl font-semibold mb-4">Create an Account</h1>
        <label class="block mb-3"><span class="text-sm">Full Name</span>
          <input class="mt-1 w-full border border-borderFx rounded px-3 py-2" />
        </label>
        <label class="block mb-3"><span class="text-sm">Email</span>
          <input type="email" class="mt-1 w-full border border-borderFx rounded px-3 py-2" />
        </label>
        <label class="block mb-3"><span class="text-sm">Password</span>
          <input type="password" class="mt-1 w-full border border-borderFx rounded px-3 py-2" />
        </label>
        <label class="block mb-5"><span class="text-sm">Confirm Password</span>
          <input type="password" class="mt-1 w-full border border-borderFx rounded px-3 py-2" />
        </label>
        <button class="w-full px-4 py-2 bg-brandRed hover:bg-brandRedDark text-brandWhite rounded">Sign Up</button>
      </form>
    </div>
  </section>
</Base>
