---
import Base from "@/layouts/Base.astro";
---
<Base title="Login">
  <h1 class="text-2xl font-semibold mb-4">Login</h1>
  <form class="space-y-3 max-w-sm">
    <label class="block">
      <span class="text-sm">Email</span>
      <input type="email" class="mt-1 w-full border rounded px-3 py-2" />
    </label>
    <label class="block">
      <span class="text-sm">Password</span>
      <input type="password" class="mt-1 w-full border rounded px-3 py-2" />
    </label>
    <button class="px-4 py-2 bg-blue-600 text-white rounded">Sign in</button>
  </form>
</Base>
